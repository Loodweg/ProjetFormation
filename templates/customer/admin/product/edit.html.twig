{% extends 'admin/base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}

<div class="container py-5">
    <div class="row">
        <h1>Editer un Produit</h1>
        <div class="col-12 ">
            <a class="btn btn-dark" href="{{ path('admin_product_index') }}">Revenir aux produits</a>
        </div>

        <div class="col-sm-12 mt-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Modifier un Produit</h5>
                </div>
                <div class="card-body">
                       {{ include('admin/product/_form.html.twig', {'button_label': 'Modifier'}) }}
                </div>
            </div>
        </div>

        <div class="col-sm-12 mt-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Supprimer le produit</h5>
                </div>
                <div class="card-body">
                        {{ include('admin/product/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}
